<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Recycler_Row_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">


            <TextView
                android:id="@+id/Recycler_row_itemId"
                android:layout_width="21dp"
                android:layout_height="56dp"
                android:text="1"
                android:textColor="#000"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Recycler_row_itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Item Name"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintStart_toEndOf="@+id/Recycler_row_itemId"
                app:layout_constraintTop_toTopOf="@+id/Recycler_row_itemId" />

            <TextView
                android:id="@+id/Stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="36dp"
                android:text="Number of Items:"
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/Recycler_row_itemId"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Recycler_row_itemOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="264dp"
                android:layout_marginTop="12dp"
                android:text="Item Owner"
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/Recycler_row_itemId"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Recycler_row_numItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="36dp"
                android:text="# of Items"
                android:textColor="#000"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/Stock"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>